.cart {
  height: calc(100vh - 90rpx);
}
.cart .cart_address .address_btn {
  padding: 20px;
}
.cart .cart_address .address_btn button {
  width: 60%;
}
.cart .cart_address .detail_address_row {
  display: flex;
  padding: 0 20rpx;
}
.cart .cart_address .detail_address_row .address_info {
  flex: 5;
}
.cart .cart_address .detail_address_row .address_phone {
  flex: 3;
  text-align: right;
}
.cart .cart_container .cart_title {
  font-size: 40rpx;
  padding: 20rpx;
  border-top: 2rpx solid var(--themeColor);
  border-bottom: 2rpx solid var(--themeColor);
}
.cart .cart_container .cart_content .cart_content_item {
  border-bottom: 2rpx solid #ccc;
  padding: 20rpx 0 10rpx 10rpx;
  display: flex;
  align-items: center;
}
.cart .cart_container .cart_content .cart_content_item .cart_chk_wrap {
  flex: 1;
}
.cart .cart_container .cart_content .cart_content_item .cart_img_wrap {
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
}
.cart .cart_container .cart_content .cart_content_item .cart_img_wrap image {
  width: 80%;
}
.cart .cart_container .cart_content .cart_content_item .item_detail {
  flex: 5;
}
.cart .cart_container .cart_content .cart_content_item .item_detail .item_detail_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart .cart_container .cart_content .cart_content_item .item_detail .item_detail_btm {
  display: flex;
  padding-top: 20rpx;
}
.cart .cart_container .cart_content .cart_content_item .item_detail .item_detail_btm .detail_price {
  flex: 1;
  font-size: 35rpx;
  color: var(--themeColor);
}
.cart .cart_container .cart_content .cart_content_item .item_detail .item_detail_btm .detail_btn {
  padding-right: 10rpx;
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.cart .cart_container .cart_content .cart_content_item .item_detail .item_detail_btm .detail_btn .text {
  padding: 0 20rpx;
}
.cart .cart_container .cart_content .cart_content_item .item_detail .item_detail_btm .detail_btn .btn {
  border: 2rpx solid #ccc;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .cart_container .cart_content .emptyCart {
  height: calc(100vh - 90rpx - 96rpx - 176rpx);
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_footer_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 90rpx;
  background-color: #fff;
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
}
.cart_footer_tool .all_chk_wrap {
  flex: 1.5;
  padding-left: 10rpx;
  display: flex;
  align-items: center;
}
.cart_footer_tool .all_chk_wrap checkbox-group checkbox {
  color: var(--themeColor);
}
.cart_footer_tool .all_chk_wrap .chk_text {
  font-size: 24rpx;
  color: #666;
}
.cart_footer_tool .total_price_wrap {
  display: flex;
  flex: 4;
  justify-content: flex-end;
  padding-right: 10rpx;
}
.cart_footer_tool .total_price_wrap .total {
  padding-right: 20rpx;
}
.cart_footer_tool .total_price_wrap .price_box .price {
  text-align: right;
  font-size: 30rpx;
  color: var(--themeColor);
}
.cart_footer_tool .total_price_wrap .price_box .text {
  text-align: right;
}
.cart_footer_tool .order_pay_wrap {
  flex: 2;
  font-size: 40rpx;
  background-color: var(--themeColor);
  text-align: center;
  line-height: 90rpx;
  color: #fff;
}
