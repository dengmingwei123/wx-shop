.goods_list {
  height: 100%;
}
.goods_list .tabs_item {
  height: calc(100vh - 80rpx);
}
.goods_list .tabs_item .first_tab .goods_item {
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.goods_list .tabs_item .first_tab .goods_item .goods_img_wrap {
  display: flex;
  flex: 2;
  justify-content: center;
  align-items: center;
}
.goods_list .tabs_item .first_tab .goods_item .goods_img_wrap image {
  width: 70%;
}
.goods_list .tabs_item .first_tab .goods_item .goods_info_wrap {
  display: flex;
  flex: 3;
  flex-direction: column;
  justify-content: space-around;
}
.goods_list .tabs_item .first_tab .goods_item .goods_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_list .tabs_item .first_tab .goods_item .goods_info_wrap .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
