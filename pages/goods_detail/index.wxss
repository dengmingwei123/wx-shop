.goods-detail {
  height: calc(100vh - 90rpx);
}
.goods-detail .detail_swiper swiper {
  height: 65vw;
  text-align: center;
}
.goods-detail .detail_swiper swiper swiper-item image {
  width: 70%;
}
.goods-detail .goods_price {
  padding-left: 40rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: var(--themeColor);
}
.goods-detail .goods_name_row {
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 20rpx;
  display: flex;
  font-size: 26rpx;
  color: #777;
}
.goods-detail .goods_name_row .goods_name {
  flex: 5;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-detail .goods_name_row .goods_collect {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #000;
}
.goods-detail .goods_name_row .goods_collect .icon-shoucang {
  font-size: 40rpx;
}
.goods-detail .goods_name_row .goods_collect .icon-collection-b {
  font-size: 40rpx;
  color: var(--themeColor);
}
.goods-detail .goods_info .goods_info_title {
  font-size: 32rpx;
  color: var(--themeColor);
  padding: 20rpx;
  font-weight: bold;
  border-top: 5rpx solid #dedede;
  border-bottom: 10rpx solid #dedede;
}
.btm_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 2rpx solid #ccc;
}
.btm_tool .tool_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  font-size: 20rpx;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm_tool .tool_item:nth-last-child(2) {
  flex: 2;
  color: #fff;
  font-size: 30rpx;
  background-color: orange;
}
.btm_tool .tool_item:nth-last-child(1) {
  flex: 2;
  color: #fff;
  font-size: 30rpx;
  background-color: var(--themeColor);
}
