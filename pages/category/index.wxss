page {
  height: 100%;
}
.category {
  height: 100%;
}
.category .category_container {
  display: flex;
  height: calc(100vh - 90rpx);
}
.category .category_container .left_menu {
  flex: 2;
}
.category .category_container .left_menu .menu_item {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
}
.category .category_container .left_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.category .category_container .right_content {
  flex: 5;
}
.category .category_container .right_content .content_item .item_title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
}
.category .category_container .right_content .content_item .item_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.category .category_container .right_content .content_item .item_list {
  display: flex;
  flex-wrap: wrap;
}
.category .category_container .right_content .content_item .item_list navigator {
  width: 33.33%;
  text-align: center;
  padding: 10rpx;
}
.category .category_container .right_content .content_item .item_list navigator image {
  width: 50%;
}
.category .category_container .right_content .content_item .item_list navigator .text {
  font-size: 24rpx;
}
